{% extends "app/tpl/layout.html.twig" %}

{% block body %}
<section id="default" class="view">
    
    <header>
        <h1 class="page_title">{{ page.name|raw }}</h1>
    </header>
    
    <div class="wrapper">
        <div class="content">
            <div class="text">{{ page.html|raw }}</div>
        </div>
        
        <aside>
            {% if page.medias %}
            <ul class="medias">
                {% for media in page.medias %}
                <li>
                    <img src="/uploads/_{{ media.file }}" alt="{{ media.name }}" />
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        </aside>
    </div>
    
</div>

{% endblock %}
