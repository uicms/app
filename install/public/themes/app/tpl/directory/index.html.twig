{% extends "app/tpl/layout.html.twig" %}

{% block body %}
<section id="directory" class="index">
    
    <header class="page_header">
        <h2 class="page_name"><a href="{{ path('app_page', {'slug': page.slug, 'locale':app.session.get('locale') }) }}">{{ page.name|raw }}</a></h2>
        <a href="{{ path('app_page_action', {'slug':page.slug, 'locale':app.session.get('locale'), 'action':'form' }) }}" class="button contribute">Ajouter un contact</a>
    </header>
    
    {% include "app/tpl/components/filters.html.twig" %}
    
    <div class="items grid contributors infiniteScroll" data-url="{{ path('app_page_action', {'locale':app.session.get('locale'), 'slug':page.slug, 'action': 'results' }) }}" data-total="{{ total }}" data-limit="{{ params.limit }}" data-offset="0">
    {% include "app/tpl/directory/results.html.twig" %}
    </div>
</section>
{% endblock %}