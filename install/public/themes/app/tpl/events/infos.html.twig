<h3 class="event_date">
    {% if event.dateEnd == null or event.dateBegin == event.dateEnd %}
        Le {{ event.dateBegin|date("d/m/Y") }}
    {% else %}
        Du {{ event.dateBegin|date("d/m/Y") }} au {{ event.dateEnd|date("d/m/Y") }}
    {% endif %}
</h3>
<h3 class="event_venue">
{% for venue in event.venues %}
     {{ venue.name }}
{% endfor %}
</h3>
<h4 class="event_time">
    {{ event.timeBegin|date("H:i") }}{% if event.timeEnd %} - {{ event.timeEnd|date("H:i") }}{% endif %}
</h4>

<div class="event_infos infos">
    
    {% if event.topics %}
        <span class="event_topics button">{% for topic in event.topics %}<a href="{{ path('app_page', {'locale': app.session.get('locale'), 'slug': app.session.get('events_page_slug') })}}?tp[]={{ topic.id }}" class="event_topic button">#{{ topic.name }}</a> {% endfor %}</span>
    {% endif %}
    
    {% if event.keywords %}
        <span class="event_keywords">{% for keyword in event.keywords %}<a href="{{ path('app_page', {'locale': app.session.get('locale'), 'slug': app.session.get('events_page_slug') })}}?k[]={{ keyword.id }}" class="event_keyword button">#{{ keyword.name }}</a> {% endfor %}</span>
    {% endif %}
</div>