<article class="block block_{{ block.template }} {{ block.style }} {{ block.class }}">
    <div class="wrapper">
        <header class="block_header">
            <h2 class="block_name">{{ block.name|raw }}</h2>
        </header>
        <div class="block_content">
            <main>
                {% if block.text %}<div class="block_text text">{{ block.text|raw }}</div>{% endif %}
            </main>
            <aside>
                {% if block.medias %}
                <ul class="block_medias medias {% if block.style == 'medias_grid' %}grid{% else %}slider{% endif %}">
                {% for media in block.medias %}
                    {% include 'app/tpl/components/itemmedia.html.twig' %}
                {% endfor %}
                </ul>
                {% endif %}
            </aside>
        </div>
    </div>
</article>